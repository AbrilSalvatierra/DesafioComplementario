<h1>Lista de Productos</h1>
<h5>Tiempo real</h5>
<div class="product-grid">
    {{#each products}}
        <div class="product-card">
            <h3>{{this.title}}</h3>
            <p>{{this.description}}</p>
            <p>Precio: $ {{this.price}}</p>
        </div>
    {{/each}}
</div>
<style>
    .product-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
        gap: 20px;
    }

    .product-card {
        border: 1px solid #ccc;
        padding: 10px;
    }
</style>
